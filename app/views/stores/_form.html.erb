<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow-lg border-0" style="border-radius: 20px; background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(248, 240, 230, 0.9)); backdrop-filter: blur(10px); border: 2px solid var(--pastel-primary);">
      <div class="card-header border-0 py-4" style="background: linear-gradient(45deg, var(--pastel-primary), var(--pastel-accent)); border-radius: 18px 18px 0 0;">
        <h5 class="mb-0 d-flex align-items-center fw-bold" style="color: var(--text-dark);">
          <i class="bi bi-shop me-2 fs-4" style="color: var(--pastel-accent);"></i>
          <%= store.new_record? ? "Add New Store" : "Edit Store" %>
        </h5>
        <p class="mb-0 mt-2 small opacity-75" style="color: var(--text-dark);">
          <%= store.new_record? ? "Add a new grocery store to track your purchases." : "Update the store information" %>
        </p>
      </div>

      <%= form_with(model: store, class: "card-body p-4") do |form| %>
        <% if store.errors.any? %>
          <div class="alert alert-danger border-0 shadow-sm mb-4" style="border-radius: 15px; background: linear-gradient(45deg, var(--pastel-orange), var(--pastel-warm)); border: 2px solid var(--pastel-orange); color: var(--text-dark);">
            <div class="d-flex align-items-center">
              <i class="bi bi-exclamation-triangle-fill me-2 fs-5" style="color: var(--pastel-orange);"></i>
              <div>
                <h6 class="alert-heading mb-1 fw-bold">
                  <%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:
                </h6>
                <ul class="mb-0 ps-3 small">
                  <% store.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div class="d-flex flex-column gap-4">
          <div class="form-group">
            <%= form.label :name, class: "form-label d-flex align-items-center fw-medium mb-2", style: "color: var(--text-dark);" do %>
              <i class="bi bi-shop me-2" style="color: var(--pastel-primary);"></i>
              Store Name
            <% end %>
            <%= form.text_field :name, class: "form-control form-control-lg", placeholder: "e.g., Walmart, Kroger, Target", style: "border-radius: 8px; border: 2px solid var(--pastel-primary); background: rgba(255, 255, 255, 0.8); color: var(--text-dark);" %>
          </div>

          <div class="form-group">
            <%= form.label :location, class: "form-label d-flex align-items-center fw-medium mb-2", style: "color: var(--text-dark);" do %>
              <i class="bi bi-geo-alt me-2" style="color: var(--pastel-primary);"></i>
              Location
            <% end %>
            <%= form.text_field :location, class: "form-control form-control-lg", placeholder: "e.g., 123 Main St, City, State", style: "border-radius: 8px; border: 2px solid var(--pastel-primary); background: rgba(255, 255, 255, 0.8); color: var(--text-dark);" %>
          </div>
        </div>

        <div class="d-flex gap-3 mt-5 pt-4" style="border-top: 2px solid var(--pastel-primary);">
          <%= form.submit class: "btn btn-primary btn-lg fw-medium px-4 py-2", style: "border-radius: 15px; background: linear-gradient(45deg, var(--pastel-primary), var(--pastel-accent)); border: none; color: var(--text-dark); box-shadow: 0 4px 15px var(--shadow-soft);" do %>
            <i class="bi bi-check-circle me-2"></i>
            <%= store.new_record? ? "Create Store" : "Update Store" %>
          <% end %>
          <%= link_to stores_path, class: "btn btn-outline-primary btn-lg fw-medium px-4 py-2", style: "border-radius: 15px; border: 2px solid var(--pastel-primary); color: var(--text-dark);" do %>
            <i class="bi bi-arrow-left me-2"></i>
            Cancel
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
