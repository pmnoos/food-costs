<% content_for :title, "New store" %>

<div class="container-fluid py-5" style="background: linear-gradient(135deg, var(--pastel-bg), var(--pastel-light)); min-height: 100vh;">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="text-center mb-5">
        <h1 class="display-4 fw-bold mb-3" style="color: var(--text-dark); background: linear-gradient(45deg, var(--pastel-primary), var(--pastel-accent)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
          <i class="bi bi-shop me-3" style="color: var(--pastel-primary);"></i>
          Add New Store
        </h1>
        <p class="lead opacity-75" style="color: var(--text-dark);">
          Create a new store to track your grocery purchases
        </p>
      </div>

      <%= render "form", store: @store %>

      <div class="mt-5 text-center">
        <%= link_to stores_path, class: "btn btn-outline-primary btn-lg fw-medium px-4 py-2", style: "border-radius: 15px; border: 2px solid var(--pastel-primary); color: var(--text-dark);" do %>
          <i class="bi bi-arrow-left me-2"></i>
          Back to Stores
        <% end %>
      </div>
    </div>
  </div>
</div>
