<% content_for :title, "Shopping Reports" %>

<div class="w-full">
  <div class="mb-6 sm:mb-8">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2">Reports</h1>
    <p class="text-gray-600 text-sm sm:text-base">View your spending analytics and insights</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-6 mb-6 sm:mb-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 sm:p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="w-6 h-6 sm:w-8 sm:h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
        <div class="ml-3 sm:ml-4">
          <p class="text-sm sm:text-base font-medium text-gray-500">This Week</p>
          <p class="text-xl sm:text-2xl font-bold text-gray-900"><%= number_to_currency(@weekly_total) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 sm:p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="w-6 h-6 sm:w-8 sm:h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <div class="ml-3 sm:ml-4">
          <p class="text-sm sm:text-base font-medium text-gray-500">This Month</p>
          <p class="text-xl sm:text-2xl font-bold text-gray-900"><%= number_to_currency(@monthly_total) %></p>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 sm:p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <svg class="w-6 h-6 sm:w-8 sm:h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
          </svg>
        </div>
        <div class="ml-3 sm:ml-4">
          <p class="text-sm sm:text-base font-medium text-gray-500">This Year</p>
          <p class="text-xl sm:text-2xl font-bold text-gray-900"><%= number_to_currency(@yearly_total) %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-4 sm:px-6 py-4 border-b border-gray-200">
      <h3 class="text-base sm:text-lg font-medium text-gray-900">Recent Purchases</h3>
    </div>
    <div class="p-6">
      <div class="space-y-4">
        <div class="flex items-center justify-between p-4 bg-blue-50 rounded-lg">
          <div class="flex items-center">
            <div class="w-3 h-3 bg-blue-500 rounded-full mr-3"></div>
            <span class="text-sm font-medium text-gray-700">This Week</span>
          </div>
          <span class="text-lg font-semibold text-blue-600"><%= number_to_currency(@weekly_total) %></span>
        </div>
        
        <div class="flex items-center justify-between p-4 bg-green-50 rounded-lg">
          <div class="flex items-center">
            <div class="w-3 h-3 bg-green-500 rounded-full mr-3"></div>
            <span class="text-sm font-medium text-gray-700">This Month</span>
          </div>
          <span class="text-lg font-semibold text-green-600"><%= number_to_currency(@monthly_total) %></span>
        </div>
        
        <div class="flex items-center justify-between p-4 bg-purple-50 rounded-lg">
          <div class="flex items-center">
            <div class="w-3 h-3 bg-purple-500 rounded-full mr-3"></div>
            <span class="text-sm font-medium text-gray-700">This Year</span>
          </div>
          <span class="text-lg font-semibold text-purple-600"><%= number_to_currency(@yearly_total) %></span>
        </div>
      </div>
    </div>
  </div>
</div>
