<% content_for :title, "Edit Product" %>

<div class="min-vh-100 bg-light">
  <div class="container-fluid py-5">
    <!-- Header -->
    <div class="text-center mb-5">
      <h1 class="display-4 fw-bold text-dark mb-3">✏️ Edit Product</h1>
      <p class="lead text-muted">Update your grocery product information</p>
    </div>

    <%= render "form", product: @product %>

    <%= link_to "Show this product", @product, class: "btn btn-outline-primary me-2" %>
    <%= link_to "Back to products", products_path, class: "btn btn-outline-secondary" %>
  </div>
</div>
