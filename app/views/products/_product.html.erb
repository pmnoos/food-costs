<div id="<%= dom_id product %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= product.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Purchase Date:</strong>
    <%= product.purchase_date&.strftime("%B %d, %Y") %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Unit:</strong>
    <%= product.unit %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Unit price:</strong>
    <%= number_to_currency(product.unit_price) %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= product.quantity %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Total cost:</strong>
    <%= number_to_currency(product.total_cost) %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Store:</strong>
    <%= product.store.name %>
  </div>
</div>
