<% content_for :title, "Product Details" %>

<div class="row justify-content-center">
  <div class="col-lg-10">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
    <div>
        <h1 class="h2">Product Details</h1>
    </div>
      <div class="d-flex flex-column flex-md-row gap-2 mt-3 mt-md-0">
        <%= link_to edit_product_path(@product), class: "btn btn-primary d-inline-flex align-items-center" do %>
          <svg class="me-2" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Edit
      <% end %>
        <%= link_to products_path, class: "btn btn-outline-secondary d-inline-flex align-items-center" do %>
          <svg class="me-2" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back
      <% end %>
    </div>
  </div>

    <div class="row">
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">Product Information</h5>
      </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <dl class="row">
                  <dt class="col-sm-4 text-muted">Name</dt>
                  <dd class="col-sm-8"><%= @product.name %></dd>
                  
                  <dt class="col-sm-4 text-muted">Purchase Date</dt>
                  <dd class="col-sm-8"><%= @product.purchase_date&.strftime("%B %d, %Y") || "Not specified" %></dd>
                  
                  <dt class="col-sm-4 text-muted">Store</dt>
                  <dd class="col-sm-8"><%= @product.store.name %></dd>
                  
                  <dt class="col-sm-4 text-muted">Unit</dt>
                  <dd class="col-sm-8"><%= @product.unit %></dd>
                </dl>
              </div>
              
              <div class="col-md-6">
                <dl class="row">
                  <dt class="col-sm-4 text-muted">Unit Price</dt>
                  <dd class="col-sm-8 fw-bold"><%= number_to_currency(@product.unit_price) %></dd>
                  
                  <dt class="col-sm-4 text-muted">Quantity</dt>
                  <dd class="col-sm-8"><%= @product.quantity %></dd>
                  
                  <dt class="col-sm-4 text-muted">Total Cost</dt>
                  <dd class="col-sm-8">
                    <span class="fw-bold <%= @product.total_cost < 0 ? 'text-danger' : 'text-success' %>">
                      <%= number_to_currency(@product.total_cost) %>
                    </span>
                </dd>
                </dl>
              </div>
              </div>
          </div>
          </div>
        </div>

      <div class="col-lg-4">
        <div class="card">
          <div class="card-header">
            <h6 class="mb-0">Quick Actions</h6>
              </div>
          <div class="card-body">
            <div class="d-grid gap-2">
              <%= link_to new_product_path(store_id: @product.store_id), class: "btn btn-outline-primary" do %>
                <svg class="me-2" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Add Another Product
              <% end %>
              
              <%= link_to products_path(store_id: @product.store_id), class: "btn btn-outline-info" do %>
                <svg class="me-2" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                View Store Products
              <% end %>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
