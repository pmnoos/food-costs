<% content_for :title, "Products" %>

<div class="w-full">
  <% if notice.present? %>
    <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
      <p class="text-green-700 font-medium" id="notice"><%= notice %></p>
    </div>
  <% end %>

  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 sm:mb-8">
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-2">Products</h1>
      <p class="text-gray-600 text-sm sm:text-base">Manage your grocery purchases and track costs</p>
    </div>
    <%= link_to new_product_path, class: "inline-flex items-center px-3 sm:px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200 shadow-sm text-sm sm:text-base" do %>
      <svg class="w-4 h-4 sm:w-5 sm:h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
      </svg>
      Add Product
    <% end %>
  </div>

  <!-- Filter Form -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6">
    <div class="px-4 sm:px-6 py-4 border-b border-gray-200">
      <h3 class="text-base sm:text-lg font-medium text-gray-900">Filter Products</h3>
    </div>
    <div class="p-4 sm:p-6">
      <%= form_with url: products_path, method: :get, local: true, class: "space-y-4" do |form| %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Store</label>
            <%= form.select :store_id, 
                options_from_collection_for_select(@stores, :id, :name, params[:store_id]), 
                { prompt: "All stores" }, 
                class: "block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Purchase Date</label>
            <%= form.date_field :purchase_date, 
                value: params[:purchase_date], 
                class: "block w-full rounded-lg border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          
          <div class="flex items-end space-x-2">
            <%= form.submit "Filter", class: "px-3 sm:px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200 text-sm" %>
            <%= link_to "Clear", products_path, class: "px-3 sm:px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg transition-colors duration-200 text-sm" %>
            <% if params[:store_id].present? || params[:purchase_date].present? %>
              <%= link_to new_product_path(store_id: params[:store_id], purchase_date: params[:purchase_date]), 
                  class: "px-3 sm:px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors duration-200 text-sm" do %>
                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Quick Add
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div id="products" class="space-y-6">
    <% if @products.any? %>
      <% @products.group_by(&:purchase_date).sort.reverse.each do |purchase_date, products| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow duration-200">
          <div class="px-4 sm:px-6 py-4 bg-gray-50 border-b border-gray-200">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
              <div class="flex items-center mb-2 sm:mb-0">
                <svg class="w-4 h-4 sm:w-5 sm:h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <h3 class="text-base sm:text-lg font-semibold text-gray-900">
                  <%= purchase_date&.strftime("%B %d, %Y") || "No Date" %>
                </h3>
              </div>
              <div class="text-left sm:text-right">
                <span class="text-xs sm:text-sm text-gray-500">
                  <%= pluralize(products.count, 'item') %>
                </span>
                <div class="text-base sm:text-lg font-bold text-green-600">
                  <%= number_to_currency(products.sum(&:total_cost)) %>
                </div>
              </div>
            </div>
          </div>

          <div class="p-4 sm:p-6">
            <div class="space-y-3 sm:space-y-4">
              <% products.each do |product| %>
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between py-3 border-b border-gray-100 last:border-b-0">
                  <div class="flex-1 mb-3 sm:mb-0">
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
                      <div class="flex-1">
                        <h4 class="text-sm font-medium text-gray-900 mb-1"><%= product.name %></h4>
                        <div class="flex flex-wrap items-center gap-2 sm:gap-4 text-xs text-gray-500">
                          <span><%= product.quantity %> <%= product.unit %></span>
                          <span>@ <%= number_to_currency(product.unit_price) %></span>
                          <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            <%= product.store.name %>
                          </span>
                        </div>
                      </div>
                      <div class="mt-2 sm:mt-0 sm:text-right">
                        <div class="text-sm font-semibold <%= product.total_cost < 0 ? 'text-red-600' : 'text-green-600' %>">
                          <%= number_to_currency(product.total_cost) %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="flex flex-wrap gap-1 sm:gap-2">
                    <%= link_to product, class: "inline-flex items-center px-2 sm:px-3 py-1.5 sm:py-2 text-xs font-medium text-blue-600 hover:text-blue-700 hover:bg-blue-50 rounded transition-colors duration-200" do %>
                      <svg class="w-3 h-3 sm:w-4 sm:h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                      <span class="hidden sm:inline">View</span>
                    <% end %>
                    <%= link_to edit_product_path(product), class: "inline-flex items-center px-2 sm:px-3 py-1.5 sm:py-2 text-xs font-medium text-gray-600 hover:text-gray-700 hover:bg-gray-50 rounded transition-colors duration-200" do %>
                      <svg class="w-3 h-3 sm:w-4 sm:h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                      </svg>
                      <span class="hidden sm:inline">Edit</span>
                    <% end %>
                    <%= button_to product, method: :delete, class: "inline-flex items-center px-2 sm:px-3 py-1.5 sm:py-2 text-xs font-medium text-red-600 hover:text-red-700 hover:bg-red-50 rounded transition-colors duration-200", data: { turbo_confirm: "Are you sure you want to delete this product?" } do %>
                      <svg class="w-3 h-3 sm:w-4 sm:h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                      <span class="hidden sm:inline">Delete</span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No products found</h3>
        <p class="mt-1 text-sm text-gray-500">
          <% if params[:store_id].present? || params[:purchase_date].present? %>
            Try adjusting your filters or 
          <% end %>
          Get started by creating your first product.
        </p>
        <div class="mt-6">
          <%= link_to new_product_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Add Product
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
