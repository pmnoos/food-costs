<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-lg border-0" style="border-radius: 20px; background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(248, 240, 230, 0.9)); backdrop-filter: blur(10px); border: 2px solid var(--pastel-primary);">
        <div class="card-body p-5">
          <div class="text-center mb-4">
            <i class="bi bi-shield-lock fs-1 mb-3" style="color: var(--pastel-primary);"></i>
            <h2 class="fw-bold" style="color: var(--text-dark);">Change your password</h2>
            <p class="text-muted">Enter your new password below</p>
          </div>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="mb-4">
              <%= f.label :password, "New password", class: "form-label fw-medium", style: "color: var(--text-dark);" do %>
                <i class="bi bi-lock me-2" style="color: var(--pastel-primary);"></i>
                New Password
              <% end %>
              <% if @minimum_password_length %>
                <small class="text-muted d-block mb-2">
                  <i class="bi bi-info-circle me-1"></i>
                  <%= @minimum_password_length %> characters minimum
                </small>
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-lg", style: "border-radius: 15px; border: 2px solid var(--pastel-primary); background: rgba(255, 255, 255, 0.8); color: var(--text-dark);" %>
            </div>

            <div class="mb-4">
              <%= f.label :password_confirmation, "Confirm new password", class: "form-label fw-medium", style: "color: var(--text-dark);" do %>
                <i class="bi bi-lock-fill me-2" style="color: var(--pastel-primary);"></i>
                Confirm New Password
              <% end %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", style: "border-radius: 15px; border: 2px solid var(--pastel-primary); background: rgba(255, 255, 255, 0.8); color: var(--text-dark);" %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Change Password", class: "btn btn-primary btn-lg fw-medium", style: "border-radius: 15px; background: linear-gradient(45deg, var(--pastel-primary), var(--pastel-accent)); border: none; color: var(--text-dark); box-shadow: 0 4px 15px var(--shadow-soft);" %>
            </div>
          <% end %>

          <div class="text-center mt-4">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
