<div class="min-vh-100 bg-light">
  <div class="container-fluid py-5">
    <!-- Header -->
    <div class="text-center mb-4">
      <h1 class="display-4 fw-bold text-dark mb-3">✏️ Edit Recipe</h1>
      <p class="lead text-muted">Update your recipe details</p>
    </div>

    <!-- Breadcrumb -->
    <div class="mb-4">
      <%= link_to recipes_path, class: "text-warning text-decoration-none fw-medium d-flex align-items-center" do %>
        <i class="bi bi-arrow-left me-2"></i>
        Back to Recipes
      <% end %>
    </div>

    <%= render 'form', recipe: @recipe %>

    <div class="d-flex justify-content-end mt-4">
      <%= button_to "Delete Recipe", recipe_path(@recipe), method: :delete, data: { confirm: "Are you sure you want to delete this recipe?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div> 