<div class="min-vh-100 bg-light">
  <div class="container-fluid py-5">
    <!-- Header -->
    <div class="text-center mb-4">
      <h1 class="display-4 fw-bold text-dark mb-3">✏️ Edit Menu</h1>
      <p class="lead text-muted">Update your menu details and recipe selection</p>
    </div>

    <!-- Breadcrumb -->
    <div class="mb-4">
      <%= link_to menus_path, class: "text-success text-decoration-none fw-medium d-flex align-items-center" do %>
        <i class="bi bi-arrow-left me-2"></i>
        Back to Menus
      <% end %>
    </div>

    <%= render 'form', menu: @menu %>
  </div>
</div> 